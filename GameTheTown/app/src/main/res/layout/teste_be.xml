<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gamethetown.Activities.onCompleteItinerary"
    android:orientation="vertical"
    android:background="@drawable/background2">

    <ImageView
        android:layout_width="368dp"
        android:layout_height="100dp"
        android:id="@+id/image"
        android:src="@drawable/no_image"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/nameCreator"
        android:background="@drawable/text_top"
        android:textSize="20sp"
        android:text="Creators name"
        app:layout_constraintTop_toBottomOf="@+id/image"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/text_mid"
        android:textSize="20sp"
        android:text="score: "
        app:layout_constraintTop_toBottomOf="@+id/nameCreator"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/time"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/text_mid"
        android:textSize="20sp"
        android:text="time to complete: "
        app:layout_constraintTop_toBottomOf="@+id/nameCreator"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/score" />

    <TextView
        android:id="@+id/text_diff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Recomended Difficulty"
        android:background="@drawable/text_mid"
        app:layout_constraintTop_toBottomOf="@+id/score"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/text_rate"
        android:layout_marginTop="0dp" />

    <Spinner
        android:id="@+id/dif"
        android:layout_width="98dp"
        android:layout_height="59dp"
        app:layout_constraintTop_toBottomOf="@+id/text_diff"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toLeftOf="@+id/ratingBar"
        android:layout_marginRight="8dp">
    </Spinner>


    <TextView
        android:id="@+id/text_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rate"
        android:background="@drawable/text_mid"
        app:layout_constraintTop_toBottomOf="@+id/time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/text_diff"
        android:layout_marginTop="0dp" />

    <RatingBar
        style="@style/Widget.AppCompat.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        app:layout_constraintTop_toBottomOf="@+id/text_rate"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/ratingBar"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Rating list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:onClick="finishItinerary"
        android:layout_weight="1"
        android:src="@android:drawable/checkbox_on_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />



</android.support.constraint.ConstraintLayout>
