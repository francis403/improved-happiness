<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/list_itenerary"
    android:background="@drawable/background2"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="All Available Iteneraries"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="vertical">
            <EditText
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="Look For A Specific One"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/filter"
                android:textSize="15sp"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Filter By Difficulty"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/spinner_dif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/filter2"
                android:textSize="15sp"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Filter By Proximity"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/spinner_prox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_height="50dp"
                android:layout_width="75dp">
            </LinearLayout>

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Search"/>
            <LinearLayout
                android:layout_height="50dp"
                android:layout_width="75dp">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">
        </LinearLayout>
    <fragment
        android:id="@+id/fragment1"
        android:name="com.example.gamethetown.IteneraryListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>
